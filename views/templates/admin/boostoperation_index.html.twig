{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <i class="material-icons float-left mr-2">menu_book</i>
                    {{ 'Boost Operations'|trans({}, 'Admin.Global') }}
                </div>
                <div class="card-body">
                    {% if operations|length > 0 %}
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>{{ 'ID'|trans({}, 'Admin.Global') }}</th>
                                <th>{{ 'Boost Product'|trans({}, 'Modules.BoostProducts.Admin') }}</th>
                                <th>{{ 'Customer'|trans({}, 'Admin.Global') }}</th>
                                <th>{{ 'Duration (days)'|trans({}, 'Modules.BoostProducts.Admin') }}</th>
                                <th>{{ 'Boost Price'|trans({}, 'Modules.BoostProducts.Admin') }}</th>
                                <th>{{ 'Total Price'|trans({}, 'Modules.BoostProducts.Admin') }}</th>
                                <th>{{ 'Date Added'|trans({}, 'Admin.Global') }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for operation in operations %}
                                <tr>
                                    <td>{{ operation.id_boost_operation }}</td>
                                    <td>
                                        <a href="{{ path('admin_boostproduct_edit', {'id_boost_product': operation.id_boost_product}) }}">{{ operation.product_name }}</a>
                                    </td>
                                    <td>{{ operation.customer_name }}</td>
                                    <td>{{ operation.boost_duration }}</td>
                                    <td>{{ operation.boost_price }}</td>
                                    <td>{{ operation.total_price }}</td>
                                    <td>{{ operation.date_add|date('Y-m-d H:i:s') }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="alert alert-warning">
                            {{ 'No boost operations found.'|trans({}, 'Modules.BoostProducts.Admin') }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
